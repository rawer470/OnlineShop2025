@model IEnumerable<Asp2025_Models.Category>

@{
    ViewData["Title"] = "Index Category";
}

<h1>Index Category</h1>

<div style="margin-bottom: 25px;">
    <!--Create Category -->
    <a class="btn btn-primary" asp-action="Create">Create new Category</a>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered" style="width:100%">
    <tr>
        <td>Category Name</td>
        <td>Display Order</td>
        <td>Actions</td>
    </tr>

    @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <!-- Buttons -->
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
}
